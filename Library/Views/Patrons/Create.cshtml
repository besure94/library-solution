@{
  Layout = "_Layout";
}

@model Library.Models.Patron

<h4>Create a new patron</h4>
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class="text-danger", @style="font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class="text-danger", @style="font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  <br>
  @Html.LabelFor(model => model.PhoneNumber)
  @Html.TextBoxFor(model => model.PhoneNumber)
  <br>
  <br>
  <input type="submit" value="Create new patron" class="btn btn-primary"/>
}
<p>@Html.ActionLink("View patron list", "Index")</p>