@{
  Layout = "_Layout";
}

@using Library.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>
<hr/>

@if(!ViewData.ModelState.IsValid)
{
  @Html.ValidationSummary("Please fix the following error(s) and then resubmit the form:")
}

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Email)
  @Html.TextBoxFor(model => model.Email)
  <br>
  <br>
  @Html.LabelFor(model => model.Password)
  @Html.EditorFor(model => model.Password)
  <br>
  <br>
  @Html.LabelFor(user => user.Librarian)
  <br>
  @Html.RadioButtonFor(user => user.Librarian, true, new {id = "librarian-true" })
  @Html.Label("librarian-true", "Librarian")
  <br>
  @Html.RadioButtonFor(user => user.Librarian, false, new {id = "librarian-false" })
  @Html.Label("librarian-true", "Patron")
  <br>
  <br>
  <input type="submit" class="btn btn-primary" value="Log in"/>
}

<p>@Html.ActionLink("Register for an account", "Register")</p>
<p>@Html.ActionLink("Back to accounts page", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>